---
export interface Props {
  position?: number;
  name: string;
  text: string;
}

const { name, text, position } = Astro.props;
---

<li
  class="flex flex-col bg-zinc-800 w-full h-full rounded-md align-middle px-5 border-zinc-600 border-solid border-[1px]"
>
  <div class="flex flex-row gap-2 align-middle mt-auto">
    {
      position && (
        <h3
          class={
            (position === 1
              ? "text-yellow-400"
              : position === 2
              ? "text-gray-300"
              : position === 3
              ? "text-orange-500"
              : "") + " my-auto"
          }
        >
          {position}.
        </h3>
      )
    }
    <h3 class="text-lg font-bold my-auto text-violet-300">{name}</h3>
  </div>
  <p class="text-md font-semibold text-zinc-300 mb-auto">{text}</p>
</li>
