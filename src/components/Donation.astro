---
export interface Props {
  name: string;
  amount: number;
}

const { name, amount } = Astro.props;
---

<div
  class="flex flex-col bg-zinc-900 rounded-md align-middle px-5 border-zinc-700 border-solid border-[1px] h-24 w-full"
>
  <div class="flex flex-row gap-2 align-middle mt-auto">
    <h3 class="text-lg font-bold my-auto text-violet-300">{name}</h3>
  </div>
  <p class="text-md font-semibold text-zinc-300 mb-auto">${amount}</p>
</div>
